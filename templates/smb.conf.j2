# Run 'testparm' to verify the config is correct after
# you modified it.

{% for category in samba_smb_conf %}
{% if samba_smb_conf[category] is mapping %}
[{{ category }}]
{% for category_entry in samba_smb_conf[category] %}
{% if samba_smb_conf[category][category_entry] is defined %}
  {{ category_entry }} = {{ samba_smb_conf[category][category_entry] }}
{% endif %}
{% endfor %}
{% endif %}

{% endfor %}
